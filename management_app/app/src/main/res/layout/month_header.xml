<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="Total order of this month:"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

        </TextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/monthOrderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/blackText"
            android:textSize="22sp">

        </com.google.android.material.textview.MaterialTextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="Total revenue of this month:"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/monthRevenueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/blackText"
            android:textSize="22sp">

        </TextView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:id="@+id/reportButton"
        app:cornerRadius="10dp"
        android:text="View full month report"
        style="@style/Widget.MaterialComponents.Button"
        android:textColor="#509556"
        android:backgroundTint="#b1f9b3">

    </com.google.android.material.button.MaterialButton>


</LinearLayout>